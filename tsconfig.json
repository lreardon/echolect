{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": false,
        "target": "es2023",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "app/javascript",
        "outDir": "app/javascript/dist",
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
    },
    "include": [
        "app/javascript/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "app/javascript/dist",
        "app/javascript/**/*.js",
    ]
}