<%= cable_ready_stream_from "chat-#{chat.id}-reactions" %>
<div class="flex flex-col h-full overflow-y-auto text-xl overflow-x-visible">
  <h2>Reactions</h2>
  <div
    class="flex-1 flex flex-col-reverse bg-gray-900 overflow-y-auto overflow-x-visible"
  >
    <div
      id="chat-<%=chat.id%>-reactions"
      class="flex flex-wrap overflow-x-visible"
    >
      <% chat.reactions.order(created_at: :asc).each do |reaction| %>
        <%= render partial: "chats/reaction", locals: { reaction: reaction } %> <% end %>
    </div>
  </div>
</div>
