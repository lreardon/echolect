<div
  id="speaker-view"
  class="w-full flex flex-col gap-4 justify-between"
>
  <div class="flex flex-col gap-2">
    <h2>Send a message</h2>
    <div data-controller="messages">
    <form
      data-reflex="submit->Messages#create"
      data-reflex-serialize-form
    >
      <div class="flex flex-col gap-2">
        <input
          type="hidden"
          name="message[chat_id]"
          value="<%= chat.id %>"
        />
        <textarea
          class="bg-transparent h-48 md:h-16 outline-none p-2 border-1 border-white"
          name="message[body]"
        ></textarea>
        <button type="submit">Send</button>
      </div>
    </form>
    </div>
  </div>

  <div class="flex flex-col gap-2">
    <h2>React</h2>
    <div data-controller="reactions" class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <button
        data-reflex="click->Reactions#create"
        data-reaction="👍"
        data-chat-id="<%= chat.id %>"
        class="text-5xl md:text-6xl text-button p-2"
      >
        👍
      </button>
      <button
        data-reflex="click->Reactions#create"
        data-reaction="💙"
        data-chat-id="<%= chat.id %>"
        class="text-5xl md:text-6xl text-button p-2"
      >
        💙
      </button>
      <button
        data-reflex="click->Reactions#create"
        data-reaction="🧠"
        data-chat-id="<%= chat.id %>"
        class="text-5xl md:text-6xl text-button p-2"
      >
        🧠
      </button>
      <button
        data-reflex="click->Reactions#create"
        data-reaction="💀"
        data-chat-id="<%= chat.id %>"
        class="text-5xl md:text-6xl text-button p-2"
      >
        💀
      </button>
    </div>
  </div>
</div>
