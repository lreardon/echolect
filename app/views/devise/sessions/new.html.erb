<%= render layout: "shared/auth_screen" do %>
  <div class="flex flex-col gap-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do
  |f| %>
    <div class="flex flex-col gap-4">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
      placeholder: "Email", class: "w-full" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password",
      placeholder: "Password", class: "w-full" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field flex flex-row gap-2 items-center">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end %> <% flash.each do |name, msg| %> <% if msg.class == Array %> <%
    msg.each do |message| %> <%= content_tag :div, message, id: "flash_#{name}"
    %> <% end %> <% else %> <%= content_tag :div, msg, id: "flash_#{name}",
    class: "flash-error" %> <% end %> <% end %>
      <button class="actions"><%= f.submit "Log in" %></button>
      <div class="flex justify-center">
        <%= link_to "Forgot password?", new_password_path(resource_name), class:
      "text-primary" %>
      </div>
    </div>
  <% end %>
  <hr class="border-[#6b7280] rounded-full" />
  <%= link_to "Sign Up", new_registration_path(resource_name), class:
  "special-button w-full" %>
</div>
<% end %>
